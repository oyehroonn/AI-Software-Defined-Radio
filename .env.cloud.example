# AeroSentry AI - Cloud Services Configuration
# Copy to .env and customize

# ============================================
# Database (TimescaleDB)
# ============================================
DB_USER=aerosentry
DB_PASSWORD=change-this-password
DB_NAME=aerosentry

# ============================================
# Object Storage (MinIO)
# ============================================
MINIO_USER=aerosentry
MINIO_PASSWORD=change-this-password-too

# ============================================
# LLM Configuration (Optional)
# ============================================
# Provider: openai or anthropic
LLM_PROVIDER=openai
LLM_MODEL=gpt-4

# API Keys (set one based on provider)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ============================================
# Grafana (Optional)
# ============================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
